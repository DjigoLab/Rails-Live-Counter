<% provide(:title, "Home") %>

<div id="login-wrapper" class="container">
    <main class="user-login">
        <div class="form-container">

        <h1> Hello! </h1>
        <p> Before we can start counting... </p>
        <p>who are you?</p>
        <%= form_for @user do |f| %>
            <%= render 'shared/user_error_messages' %>
            <%= f.text_field :name, placeholder: "Cool username here" %>
            <%= f.submit "Let's go!", class: "" %>
        <% end %>

        </div>
    </main>
    <footer class="user-footer">
            <%= link_to "About this app", about_path_url %>
    </footer>
</div>